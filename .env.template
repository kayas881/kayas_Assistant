# ================================
# KAYAS AI ASSISTANT - CONFIGURATION
# ================================
# Copy this file to .env and fill in your credentials
# The .env file is gitignored for security

# ================================
# CORE SETTINGS
# ================================
OLLAMA_MODEL=llama3.1
EMBED_MODEL=nomic-embed-text
OLLAMA_URL=http://localhost:11434

# Whisper model for speech recognition (small, base, medium, large-v3)
WHISPER_MODEL=small

# TTS engine (pyttsx3 or coqui)
TTS_ENGINE=pyttsx3

# Planning mode (structured or react)
PLANNING_MODE=structured

# Sandbox mode (disabled, dry-run, or enforced)
SANDBOX_MODE=disabled

# ================================
# DESKTOP AUTOMATION (DANGEROUS!)
# ================================
# Set to 1 to enable desktop automation (screenshots, clicks, etc.)
DESKTOP_AUTOMATION_ENABLED=0

# ================================
# EMAIL CONFIGURATION
# ================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_USE_TLS=true

# ================================
# GOOGLE CALENDAR
# ================================
# Download credentials from: https://console.cloud.google.com/
GOOGLE_CALENDAR_CREDENTIALS=
GOOGLE_CALENDAR_TOKEN=.agent/google_token.json

# ================================
# SLACK INTEGRATION
# ================================
# Get tokens from: https://api.slack.com/apps
SLACK_BOT_TOKEN=
SLACK_USER_TOKEN=
SLACK_SIGNING_SECRET=

# ================================
# SPOTIFY INTEGRATION
# ================================
# Create app at: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback

# ================================
# GITHUB INTEGRATION
# ================================
# Generate token at: https://github.com/settings/tokens
# Required scopes: repo, admin:org, user
GITHUB_TOKEN=
GITHUB_USERNAME=

# ================================
# NOTION INTEGRATION
# ================================
# Create integration at: https://www.notion.so/my-integrations
# Token format: secret_xxxxxxxxxxxxx
NOTION_TOKEN=

# ================================
# TRELLO INTEGRATION
# ================================
# Get credentials at: https://trello.com/app-key
TRELLO_API_KEY=
TRELLO_TOKEN=

# ================================
# JIRA INTEGRATION
# ================================
# Generate token at: https://id.atlassian.com/manage-profile/security/api-tokens
# URL format: https://yourcompany.atlassian.net
JIRA_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=

# ================================
# DIRECTORIES & PATHS
# ================================
AGENT_ARTIFACTS_DIR=artifacts
AGENT_DB_PATH=.agent/agent.db
CHROMA_DIR=.agent/chroma
SEARCH_ROOT=.
AGENT_PROFILE_PATH=.agent/profile.yaml
PREFERENCE_MODEL_PATH=.agent/preference_model.json
